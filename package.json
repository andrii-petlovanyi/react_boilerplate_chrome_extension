{
  "name": "react-chrome-extension",
  "version": "0.1.0",
  "description": "Modern React Chrome Extension boilerplate with TypeScript, Webpack 5, Hot Reload, and Manifest V3 support. Quick start template for building Chrome extensions.",
  "scripts": {
    "dev": "webpack --watch --progress --config webpack.dev.js",
    "start": "webpack --watch --progress --config webpack.prod.js",
    "build": "webpack --config webpack.prod.js",
    "build:extension": "ts-node --project tsconfig.scripts.json scripts/build.ts",
    "build:all": "npm run build && npm run build:extension"
  },
  "keywords": [
    "chrome",
    "extension",
    "react",
    "typescript",
    "webpack",
    "boilerplate",
    "manifest-v3",
    "chrome-extension",
    "react-chrome-extension",
    "hot-reload",
    "webpack5",
    "react19",
    "starter-kit",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrii-petlovanyi/react_boilerplate_chrome_extension.git"
  },
  "bugs": {
    "url": "https://github.com/andrii-petlovanyi/react_boilerplate_chrome_extension/issues"
  },
  "homepage": "https://github.com/andrii-petlovanyi/react_boilerplate_chrome_extension#readme",
  "author": "Andrii Petlovanyi",
  "license": "ISC",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.4",
    "@types/chrome": "^0.0.313",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "archiver": "^6.0.2",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.2",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  }
}
